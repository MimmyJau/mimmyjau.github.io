---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Link from '../../components/Link.astro';
import links from "./links.ts"

export function sortByDateAddedOrName(a,b) {
    if (b.dateAdded > a.dateAdded) {
        return 1
    } else if (b.dateAdded < a.dateAdded) {
        return -1
    }

    if (a.name > b.name) {
        return 1
    } else {
        return -1
    }

}

const sortedLinks = links.sort(sortByDateAddedOrName)
---

<BaseLayout>
    <h1>links</h1>
    my favourite things on the internet
    <h2>all</h2>
    <div>
        <ul>
        {sortedLinks.map(link => <Link link={link}/>)}
        </ul>
    </div>
</BaseLayout>
