---
import BaseLayout from "../layouts/BaseLayout.astro"
import Blog from "../components/Blog.astro"
const allPostsUnsorted = await Astro.glob('../pages/posts/*.md');
const allPosts = allPostsUnsorted.sort((a, b) => { return b.frontmatter.pubDate > a.frontmatter.pubDate ? 1 : -1; });
---

<BaseLayout>
<body>
    <h1>mimmy's blog</h1>
    <ul>
        {allPosts.map((post) => 
            <Blog post={post} />
        )}
    </ul>
</body>
</BaseLayout>
